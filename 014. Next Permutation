class Solution {
    public void nextPermutation(int[] nums) {
        int n = nums.length;
        int pivot = -1;
        for(int i = n-2; i>=0; i--){
            if(nums[i]<nums[i+1]){
                pivot = i;
                break;
            }
        }
        if(pivot == -1 ){
            int first=0, last = n-1;
            while(first < last){
                int temp = nums[first];
                nums[first] = nums[last];
                nums[last] = temp;
                first++;
                last--;
            }
            return;
        }

        for(int i = n-1; i>pivot; i--){
            if(nums[i]>nums[pivot]){
                int temp = nums[i];
                nums[i]= nums[pivot];
                nums[pivot] = temp;
                break;
            }
        }
        int i = pivot+1, j=n-1;
        while(i<j){
            int temp = nums[i];
            nums[i]=nums[j];
            nums[j]=temp;
            i++;
            j--;
        }
    }
}
